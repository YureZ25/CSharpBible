@model PersonVM

@{
    ViewData["Title"] = "Редактирование пользователя";
}

<h2>@ViewData["Title"]</h2>

<dl class="dl-horizontal">
    <dt>Имя</dt>
    <dd>@Model.Name</dd>

    <dt>Возраст</dt>
    <dd>@Model.Age</dd>
</dl>

<form asp-controller="Person" asp-action="Remove" method="post">
    <div class="form-group">
        <button type="submit" class="btn btn-outline-secondary">Удалить</button>
    </div>
</form>
