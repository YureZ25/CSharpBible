@model PersonVM

@{
    ViewData["Title"] = "Добавление пользователя";
}

<h2>@ViewData["Title"]</h2>

<form asp-controller="Person" asp-action="Add" method="post">
    <div class="form-group">
        <label>Имя</label>
        <input asp-for="Name" class="form-control" />
    </div>
    <div class="form-group">
        <label>Возраст</label>
        <input asp-for="Age" class="form-control" />
    </div>
    <div class="form-group">
        <button type="submit" class="btn btn-outline-secondary">Добавить</button>
    </div>
</form>

<div>
    <a asp-controller="Person" asp-action="Index">Вернутся к списку</a>
</div>